<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="0"
    android:rotationX="0"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnHamburger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/hamburger_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        android:elevation="12dp"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />


    <LinearLayout
        android:id="@+id/customMenu"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnHamburger"
        app:layout_constraintEnd_toEndOf="@id/btnHamburger">

        <Button
            android:id="@+id/menuHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

        <Button
            android:id="@+id/menuProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile" />

        <Button
            android:id="@+id/menuSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHomePage"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#673AB7"
        android:gravity="center"
        android:text="Home"
        android:textColor="#FFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="#673AB7"
        android:gravity="center"
        android:text="EyeQ"
        android:textColor="#FFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPinnedDevice"
        android:layout_width="145dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"
        android:text="@string/underlined_text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHome"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#673AB7"
        android:text="Home"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnDevices"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#673AB7"
        android:text="Devices"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnAlerts"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#673AB7"
        android:text="Alerts"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnHistory"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="312dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#673AB7"
        android:text="History"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />




</androidx.constraintlayout.widget.ConstraintLayout>
